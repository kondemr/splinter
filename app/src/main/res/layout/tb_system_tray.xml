<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tb_icon_size"
    tools:background="#0000FF">

    <TextView
        android:id="@+id/time_left"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="15.499dp"
        android:visibility="gone"
        tools:ignore="SpUsage" />

    <Space
        android:id="@+id/space_left"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/notification_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="2dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_count_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            tools:tint="#000000"
            tools:src="@drawable/tb_circle"/>

        <TextView
            android:id="@+id/notification_count_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13.5dp"
            android:textStyle="bold"
            tools:textColor="#0000FF"
            tools:text="1"
            tools:ignore="SpUsage"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/tb_bluetooth"/>

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/tb_signal_wifi_3_bar"/>

    <ImageView
        android:id="@+id/cellular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/tb_signal_cellular_3_bar"/>

    <ImageView
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/tb_battery_80"/>

    <Space
        android:id="@+id/space_right"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/time_right"
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="15.499dp"
        android:visibility="gone"
        tools:text="1:41 AM\n03/27/18"
        tools:visibility="visible"
        tools:ignore="SpUsage" />

</LinearLayout>